        'api/sakarkiv/saksmappe/[-0-9a-z]+/ny-saksmappe/?',
    ]
    knownwithoutlinksregex = [
        'api/metadata/ny-[a-zA-Z]+/?',
        'api/admin/ny-bruker/?',
        'api/admin/system/?',
        'api/arkivstruktur/ny-arkivskaper',
        'api/arkivstruktur/arkiv/[-0-9a-z]+/ny-oppbevaringssted/?',
